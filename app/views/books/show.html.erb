<main>
  <div>
  <%= flash[:notice] %>
 </div>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>
                name
            </th>
            <th><%=@user.name %></th>
            </tr>
            <tr>
            <th><p>introduction<%=@user.introduction %></p></th>
           <th></th>
          </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
        <h2 class="mt-3">New book</h2>

        <%= form_with model: @newbook do |f| %>
          <h5>Title</h5>
          <%= f.text_field :title %>
          <h5>Opinion</h5>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book', class: "btn btn-success" %>

        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>

        <table class="table table-hover table-inverse row">
         <tbody>
           <tr>
             <td>
               <%= link_to user_path(@book.user.id) do %>

                 <%= image_tag @book.user.get_profile_image(100,100), class:"col-12" %>
                 <%= @book.user.name %>
               <% end %>
             </td>
             <td>
               <%= link_to book_path(@book.id) do %>
               <%= @book.title %>
               <% end %>
              </td>
              <td>
                <%= @book.body %>
              </td>
                <% if @book.user == current_user %>
              <td>
                 <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %>
              </td>
              <td>
                  <%= link_to "Destroy",book_path(@book.id), method: :delete, class: "btn btn-sm btn-danger" %>
             </td>
             <% end %>
              
              
             </tr>
            </tbody>
        </table>
      </div>
    </div>
  </div>
  </main>
