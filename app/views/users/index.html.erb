
<main>
  <div class="container px-5 px-sm-0">
     <div>
      <%= flash[:notice] %>
     </div>

    <div class="row">
      <div class="col-md-3">
       <h2>User info</h2>
       <%= image_tag @user.get_profile_image(100,100) %>
     <table class="table">
    <tbody>
    <tr></tr>
    <tr>
      <th>
        name
      </th>
      <th><%=@user.name %></th>
    </tr>
    <tr>
       <th><p>introduction<%=@user.introduction %></p></th>
       <th></th>
    </tr>
  </tbody>
</table>
<div class="row">
  <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
  <i class="fas fa-user-cog"></i>
  <% end %>
</div>
<h2 class="mt-3">New book</h2>

<%= form_with model: @book do |f| %>
  <h5>TItle</h5>
  <%= f.text_field :title %>
  <h5>Opinion</h5>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book', class: "btn btn-success" %>

<% end %>
</div>
<div class="col-md-8 offset-md-1">
  <h2>Users</h2>

  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <% @users.each do |user| %>
     <tbody>
       <tr>
         <td><%= link_to user_path(user.id) do %>
             <%= image_tag user.get_profile_image(100,100) %>
        <% end %>
            </td>
           <td>
             <%= user.name %>
            </td>
           <td>
              <%= link_to "Show", user_path(user.id) %>
           </td>
        <td></td>
       </tr>
      </tbody>
     <% end %>
    </table>
   </div>
  </div>
  </div>
  </main>

